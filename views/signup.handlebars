<style>.flash {color: red;} .flash-header {font-weight: 600;}</style>
<div class="page-section">
<div class="row">
	<div class="small-11 small-centered medium-6 medium-offset-3 large-6 large-offset-3 columns">
	<h3 class="form-title">Sign Up</h3>
		<form class="form" action="" method="post" name="registration">
			<input type="text" name="username" placeholder="Username">
			<input type="password" name="password" id="password" placeholder="Password">
			<input type="password" name="repeat_password" placeholder="Repeat Password">
			<input type="submit" value="Sign Up">
		</form>
    <br>
    <div style="text-align: center"><a href="./login" class="already">Already have an account? Log in!</a></div>
    <br>
	</div>
</div>
</div>
{{#if flash}}
    <div class="row flash">
    <div class="small-11 small-centered medium-6 medium-offset-3 large-6 large-offset-3 columns">
          <p class="flash-header"><em>{{flash.header}}</em></p>
          <p><em>{{flash.body}}</em></p>
      </div>
      </div>
  {{/if}}

<script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>
<script>
// Wait for the DOM to be ready

$(function() {
  // Initialize form validation on the registration form.
  // It has the name attribute "registration"
  $("form[name='registration']").validate({
    // Specify validation rules
    rules: {
      // The key name on the left side is the name attribute
      // of an input field. Validation rules are defined
      // on the right side
      username: {
      	required: true,
      	minlength: 4
      },
      password: {
        required: true,
        minlength: 4
      },
      repeat_password: {
        required: true,
        equalTo: "#password"
      }
    },
    // Specify validation error messages
    messages: {
      username: {
      	required: "Please provide a username",
      	minlength: "Your username must be at least 4 characters long"
      },
      password: {
        required: "Please provide a password",
        minlength: "Your password must be at least 4 characters long"
      },
      repeat_password: {
      	required: "Please, repeat password",
        equalTo: "Doesn't match original password"
      }
    },
    // Make sure the form is submitted to the destination defined
    // in the "action" attribute of the form when valid
    submitHandler: function(form) {
      form.submit();
    }
  });
});
</script>


